{
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "jsx": "react",
    "types": ["react", "jest"],
    "target": "esnext",
    "module": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules", "packages"]
    }
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "babelCore": "@babel/core"
  },
  "include": ["packages"],
  "exclude": ["node_modules", "packages/**/dist"]
}
